snippet cssregistry
	<?xml version="1.0"?>
	<object name="portal_css" meta_type="Stylesheets Registry">
	  <stylesheet id="{1}"
	              cacheable="True" compression="safe" cookable="True"
	              enabled="True" media="" rel="stylesheet" rendering="link"
	              expression="request/HTTP_X_THEME_ENABLED | nothing"
	              applyPrefix="True"
	              />
	</object>
snippet jsregistry
	<?xml version="1.0"?>
	<object name="portal_javascripts" meta_type="JavaScripts Registry">
	  <javascript id="{1}"
	              cacheable="True" compression="none" cookable="True"
	              enabled="True" inline="False"
	              expression="request/HTTP_X_THEME_ENABLED | nothing"
	              insert-after="++resource++plone.app.jquerytools.overlayhelper.js" />
	</object>
